            "1": {
              "name": "entity.name.function"
            },
            "2": {
              "name": "punctuation.definition.parameter"
            },
            "3": {
              "name": "variable.other.argument"
            }
          }
        }
      ]
    },
    {
      "match": "\\b(niba|nanone_niba|niba_byanze|subiramo_niba|porogaramu_ntoya|reka|ntahinduka|tanga|ubwoko|sisitemu|injiza_amakuru|ntagaza_amakuru|KIN_AMAGAMBO|KIN_URUTONDE|KIN_INYANDIKO|KIN_IGIHE|KIN_IMIBARE)\\b",
